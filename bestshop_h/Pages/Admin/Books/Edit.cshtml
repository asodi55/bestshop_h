@page
@model bestshop_h.Pages.Admin.Books.EditModel
@{
}

<h2 class="my-3">Edit Book</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.errorMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}
else if (Model.successMessage.Length > 0)
{
    <div class='alert alert-success alert-dismissible fade show' role='alert'>
        <strong>@Model.successMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}

<form method="POST" enctype="multipart/form-data">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Id</label>
        <div class="col-sm-6">
            <input readonly type="text" class="form-control-plaintext" asp-for="id">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Title</label>
        <div class="col-sm-6">
            <input class="form-control" asp-for="title">
            <span asp-validation-for="title" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Authors</label>
        <div class="col-sm-6">
            <input class="form-control" asp-for="authors">
            <span asp-validation-for="authors" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">ISBN</label>
        <div class="col-sm-6">
            <input class="form-control" asp-for="isbn">
            <span asp-validation-for="isbn" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Pages</label>
        <div class="col-sm-6">
            <input class="form-control" asp-for="num_pages">
            <span asp-validation-for="num_pages" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Price ($)</label>
        <div class="col-sm-6">
            <input class="form-control" asp-for="price">
            <span asp-validation-for="price" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Category</label>
        <div class="col-sm-6">
            <select class="form-select" asp-for="category">
                <option value='Other'>Other</option>
                <option value='Mathematics'>Mathematics</option>
                <option value='Technology'>Technology</option>
                <option value='Economics'>Economics</option>
                <option value='Medicine'>Medicine</option>
                <option value='History'>History</option>
            </select>
            <span asp-validation-for="category" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Description</label>
        <div class="col-sm-6">
            <textarea class="form-control" asp-for="description"></textarea>
            <span asp-validation-for="description" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Image</label>
        <div class="col-sm-6">
            <img src="/images/books/@Model.image_filename" width="100">
            <input type="hidden" asp-for="image_filename" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">New Image</label>
        <div class="col-sm-6">
            <input class="form-control" asp-for="ImageFile">
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Admin/Books/Index" role="button">Cancel</a>
        </div>
    </div>
</form>
